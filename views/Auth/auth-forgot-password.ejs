<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Recover Password | <%=process.env.APP_NAME%></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="<%=process.env.APP_NAME%>" name="description" />
    <meta content="<%=process.env.APP_NAME%>" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="<%=process.env.APP_URL%>/public/assets/images/favicon-logo.png">
    <%- include ('../Partials/HeaderStyle') %>
</head>
<body>
    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-primary bg-soft">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary"> Reset Password</h5>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="<%=process.env.APP_URL%>/public/assets/images/profile-img.png" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div>
                                <div class="avatar-md profile-user-wid mb-4">
                                    <span class="avatar-title rounded-circle bg-light">
                                        <img src="<%=process.env.APP_URL%>/public/assets/images/favicon-logo.png" alt="" class="rounded-circle" height="34">
                                    </span>
                                </div>
                            </div>

                            <div class="p-2">
                                <% if(error.length > 0) { %>
                                    <div class="alert alert-danger text-center mb-4 flash" role="alert"><%= error %></div>
                                <% } %>
                                <% if(success.length > 0) { %>
                                    <div class="alert alert-success text-center mb-4 flash" role="alert"><%= success %></div>
                                <% } %>

                                <form class="form-horizontal" method="post" action="post-forgot-password">
                                    <div class="mb-3">
                                        <label for="useremail" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="useremail" name="email" placeholder="Enter email">
                                    </div>
                                    <div class="text-end">
                                        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Reset</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <div class="mt-5 text-center">
                        <p>Remember It ? <a href="<%=APP_URL%>/login" class="fw-medium text-primary"> Sign In here</a> </p>
                        <p>Â© <%- new Date().getFullYear(); %> <%=process.env.APP_NAME%>. Crafted with <i class="mdi mdi-heart text-danger"></i>by Glasierinc</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include ('../Partials/FooterScript') %>
    <!-- App js -->
    <script src="<%=process.env.APP_URL%>/public/assets/js/app.js"></script>
</body>
</html>