<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Edit SOP</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/sop">SOP</a></li>
                    <li class="breadcrumb-item active">Edit SOP</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit SOP</h4>
                <form action="/update-sop" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-xl-6">
                            <div class="mb-3">
                                <label class="form-label">Category Name<span class="required">*</span></label>
                                <input type="text" name="category_name" value="<%= data.category_name %>" class="form-control" placeholder="Enter Category Name" maxlength="200">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Level</label>
                                <select class="form-control" name="category_level" id="category_level" required disabled>
                                    <option value="1" <% if (data.level == 1) {%> selected <% } %> >Level 1</option>
                                    <option value="2" <% if (data.level == 2) {%> selected <% } %> >Level 2</option>
                                </select>
                            </div>
							<% if (data.level == 1) {%> 
								<div class="mb-3" id="single_pdf_input">
									<label class="form-label">Upload PDF</label>
									<input type="file" name="single_category_files" multiple="" class="form-control">
									<br>
									<% data.single_category_files.forEach(element => { %>
										<span style="border:1px; border-style:solid; border-radius: 10px; padding: 5px; margin-right: 5px;">
											<a href="<%=process.env.PUBLIC_URL%>/public/images/sop_files/<%= element %>" target="_blank" style="color: inherit;"><%= element %></a> 
											<i class='bx bx-x-circle text-danger' style="font-size: 18px; margin-left: 3px;"></i>
										</span>
									<% }); %>
								</div>
							<% } %>
							<% if (data.level == 2) {%>
								<div class="row mt-4">
									<div class="col-md-10 col-10">
										<h5 style="padding-top: 5px;">Add Sub Category</h4>
									</div>
									<div class="col-md-2 col-2">
										<button id="addRow" type="button" class="btn btn-warning mb-2 float-end">Add More <i class='bx bx-plus-circle'></i></button>
									</div>
									<div class="col-lg-12">
										<% for (let i = 0; i < data.sub_category.length; i++) { 
											const element = data.sub_category[i]; %>
											<% if (element.sub_category_name) { %>
												<div id="inputFormRow">
													<div class="input-group mb-4">
														<div class="col-md-5 col-5" style="padding-right: 10px;">
															<input type="text" name="sub_category_name[<%=i%>]" value="<%= element.sub_category_name %>" class="form-control" placeholder="Enter Sub Category Name">
														</div>
														<div class="col-md-5 col-5" style="padding-right: 10px;">
															<input type="file" name="sub_category_files[<%=i%>]" multiple="" class="form-control" required>
														</div>
														<div class="col-md-2 col-2 input-group-append">
															<button id="removeRow" type="button" class="btn btn-danger"><i class='bx bx-x-circle bx-xs'></i></button>
														</div>
														<div class="col-md-12 col-12 mt-2">
															<% element.sub_category_files.forEach(element2 => { %>
																<span style="border:1px; border-style:solid; border-radius: 8px; padding: 5px; margin-right: 5px;">
																	<a href="<%=process.env.PUBLIC_URL%>/public/images/sop_files/<%= element2 %>" target="_blank" style="color: inherit;"><%= element2 %></a> 
																	<i class='bx bx-x-circle text-danger' style="font-size: 18px; margin-left: 3px;"></i>
																</span>
															<% }); %>
														</div>
													</div>
												</div>
											<% } %>
										<% } %>
										<div id="newRow"></div>
									</div>
								</div>
							<% } %>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:20px;">
                        <div class="col-xl-2"></div>
                        <div class="col-xl-6">
                            <button type="submit" class="btn btn-warning waves-effect waves-light"><i class="bx bx-check-double label-icon"></i> Save</button>
                            <a href="/sop"><button type="button" class="btn btn-danger waves-effect waves-light"><i class="bx bx-block label-icon"></i> Cancel</button></a>
                        </div>  
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>

<script type="text/javascript">
    $(document).ready(function(){
        var x = 1; //Initial field counter is 1

        $('.add_button').click(function(){ //Once add button is clicked
            if(x < 15){ //Check maximum number of input fields
                
				var fieldHTML = '';
				fieldHTML += '<div style="display:flex;margin:5px;">';
				fieldHTML += '<div class="col-md-5 col-5">';
				fieldHTML += '<input type="text" name="sub_category_name['+x+']" class="form-control" placeholder="Enter Category Name" autofocus maxlength="200">';
				fieldHTML += '</div>';
				fieldHTML += '<div class="col-md-5 col-5">';
				fieldHTML += '<input type="file" name="sub_category_files['+x+']" multiple="" class="form-control">';
				fieldHTML += '</div>';
				fieldHTML += '<a href="javascript:void(0);" class="remove_button btn btn-danger" style="margin-left:10px;">-</a>';
				fieldHTML += '</div>';
				
				$('.input_field_wrapper').append(fieldHTML); // Add field html
				x++; //Increment field counter
				$('#sub_category_count').val(x);
            }
        });

        $('.input_field_wrapper').on('click', '.remove_button', function(e){ //Once remove button is clicked
            e.preventDefault();
            $(this).parent('div').remove(); //Remove field html
            x--; //Decrement field counter
			$('#sub_category_count').val(x);
        });

		// remove row
		$(document).on('click', '#removeRow', function () {
        $(this).closest('#inputFormRow').remove();
    });
    });

	$(document).ready(function(){
		let i = 1;
		// add row
		$("#addRow").click(function () {
			var html = '';
			html += '<div id="inputFormRow">'
			html += '<div class="input-group mb-3">'
			html += '<div class="col-md-5 col-5" style="padding-right: 10px;">'
			html += '<input type="text" name="sub_category_name['+i+']" class="form-control" placeholder="Enter Sub Category Name">'
			html += '</div>'
			html += '<div class="col-md-5 col-5" style="padding-right: 10px;">'
			html += '<input type="file" name="sub_category_files['+i+']" multiple="" class="form-control" required>'
			html += '</div>'
			html += '<div class="input-group-append">'
			html += '<button id="removeRow" type="button" class="btn btn-danger"><i class="bx bx bx-x-circle bx-xs"></i></button>'
			html += '</div>'
			html += '</div>'
			html += '</div>'

			$('#newRow').append(html);
			i++;
		});

		// remove row
		$(document).on('click', '#removeRow', function () {
			$(this).closest('#inputFormRow').remove();
		});
	});
</script>
