<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Assign Auditor</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/manage-rating">Manage Rating</a></li>
                    <li class="breadcrumb-item active">Assign Auditor</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-4">
                        <h5>Assign Auditor</h5>
                    </div>
                    <div class="col-sm-8">
                        <a href="/manage-rating" class="text-center btn btn-warning waves-effect waves-light" style="align-items: center;float: right;"> <b>Back</b> </a>
                    </div>
                </div>
                <hr>

                <form action="/store-assign-auditor" method="POST" enctype="multipart/form-data" class="custom-validation">
                    <div class="row mb-2">
                        <div class="col-md-8">
                            <div class="mb-3 row">
                                <label class="col-md-2 col-form-label">Select Property Name</label>
                                <div class="col-md-5" style="padding-right:0px;padding-left:0px;">
                                    <select name="propertyId" class="form-select" required>
                                        <option value="">Select Property Name</option>
                                        <% for (i = 0; i < data.length; i++) { %>
                                        <option value="<%= data[i]._id %>"><%= data[i].property_name %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-md-2 col-form-label">Select Group Name</label>
                                <div class="col-md-5" style="border: 1px solid #ced4da;">
                                    <div data-simplebar="init" style="max-height: 300px;">
                                        <div class="simplebar-wrapper" style="margin: 0px;">
                                            <div class="simplebar-mask">
                                                <div class="simplebar-offset" style="bottom: 0px;">
                                                    <div class="simplebar-content-wrapper" style="height: auto; overflow: hidden scroll;">
                                                        <div class="simplebar-content" style="padding: 0px;">
                                                            <div class="table-responsive">
                                                                <table class="table table-nowrap align-middle table-hover mb-0">
                                                                    <tbody>
                                                                        <% for (i = 0; i < groupNameData.length; i++) { %>
                                                                        <tr>
                                                                            <td style="width: 50px;">
                                                                                <div class="form-check">
                                                                                    <input class="form-check-input" name="groupId" type="checkbox" id="groupName<%=i+1%>" checked value="<%= groupNameData[i]._id %>">
                                                                                    <label class="form-check-label" for="groupName<%=i+1%>"><h5 class="text-truncate font-size-14 mb-1"><%= groupNameData[i].groupName %></h5></label>
                                                                                </div>
                                                                            </td>
                                                                        </tr>
                                                                        <% } %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="simplebar-placeholder" style="width: auto; height: 448px;"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label class="col-md-2 col-form-label">Select Auditor</label>
                                <div class="col-md-5" style="padding-right:0px;padding-left:0px;">
                                    <select class="form-select" name="auditorId" required>
                                        <option value="">Select Auditor</option>
                                        <% for (i = 0; i < auditorData.length; i++) { %>
                                        <option value="<%= auditorData[i]._id %>"><%= auditorData[i].full_name %></option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-6">
                            <button type="submit" class="text-center btn btn-warning waves-effect waves-light" style="align-items: center;"> <b>Submit</b> </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
<%- contentFor('BottomJs') %>