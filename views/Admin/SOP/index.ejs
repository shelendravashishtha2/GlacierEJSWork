<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<style>
    .text-center{text-align: center;}
</style>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">SOP</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">SOP</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <form method="GET" action="/sop" id="form">
                <div class="row mb-2">
                    <!-- start searching -->
                    <div class="col-sm-3">
                        <div class="search-box">
                            <div class="position-relative">
                                <input type="text" name="search" value="<%= search %>" class="form-control" placeholder="Search..."><i class="bx bx-search-alt search-icon"></i>
                                <input type="hidden" name="page" id="page" value="<%= page %>">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-3" style="padding: 0px;">
                        <button type="button" onclick="pagination(1)" class="btn btn-warning btn-rounded waves-effect waves-light"><i class="bx bx-search-alt search-icon"></i> Search</button>
                    </div>
                    <!-- end searching -->
                    
                    <div class="col-sm-6">
                        <div class="text-sm-end">
                        <% if(session) { %>
                        <% if(session.user.position_id == 1) { %>
                            <a href="/create-sop"><button type="button" class="btn btn-warning btn-rounded waves-effect waves-light mb-2 me-2" style="float: right;"><b>+ ADD SOP</b></button></a>
                        <% } } %>
                        </div>
                    </div>
                </div>
                </form>
                <hr>
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap table-check">
                        <thead>
                        <tr>
                            <th style="text-align: center;">#</th>
                            <th>Category Name</th>
                            <th>Sub Category</th>
                            <th style="text-align: center;">Files</th>
                            <th style="text-align: center;">Level</th>
                            <th style="text-align: center;">Status</th>
                            <th style="width: 10%;text-align: center;">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% if(data.length ==0) { %>
                                <tr><td colspan="7" class="text-center">No data found</td></tr>
                            <% } %>
                            <% for (i = 0; i < data.length; i++) { %>
                            <tr>
                                <td style="width: 5%;text-align: center;"><%=i+1%></td>
                                <td><%= data[i].category_name %></td>
                                <td>
                                    <% if (data[i].level == 1) { %>
                                        --
                                    <% } else if (data[i].level == 2) { %>
                                        <% data[i].sub_category.forEach(element => { %>
                                            <% if (element.sub_category_name) { %>
                                                <%= element.sub_category_name %> <br>
                                            <% } else { %>
                                                --
                                            <% } %> 
                                        <% }); %>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (data[i].level == 1) { %>
										<% for( let j = 0; j < data[i].single_category_files.length; j++ ) { %>
											<% if (j > 0) { %>, <% } %>
											<a href="<%=process.env.PUBLIC_URL%>/public/images/sop_files/<%= data[i].single_category_files[j] %>" target="_blank"><%= data[i].single_category_files[j] %></a>
										<% } %>
										<br>
                                    <% } else if (data[i].level == 2) { %>
                                        <% data[i].sub_category.forEach(element => { %>
                                            <% if (element.sub_category_name) { %>
												<% for( let j = 0; j < element.sub_category_files.length; j++ ) { %>
													<% if (j > 0) { %>, <% } %>
													<a href="<%=process.env.PUBLIC_URL%>/public/images/sop_files/<%= element.sub_category_files[j] %>" target="_blank"><%= element.sub_category_files[j] %></a>
												<% } %>
												<br>
                                            <% } else { %>
                                                --
                                            <% } %> 
                                        <% }); %>
                                    <% } %>
                                </td>
                                <td style="width: 10%;text-align: center;"><%= data[i].level %></td>
                                <td style="width: 10%;text-align: center;"><input type="checkbox" class="status" id="switch<%=i+1%>" value="<%= data[i]._id %>" switch="warning" <% if(data[i].status == 1) {%> checked <% } %> />
                                    <label for="switch<%=i+1%>" data-on-label="Yes" data-off-label="No"></label>
                                </td>
                                <td style="width: 10%;text-align: center;">
                                    <% if(session) { %>
                                    <% if(session.user.position_id == 1) { %>
                                    <a href="/edit-sop/<%= data[i]._id %>"> <button class="btn btn-outline-warning"><b>Edit</b></button></a>
                                    <% } } %>
                                    <a href="/view-sop/<%= data[i]._id %>"><button class="btn btn-outline-secondary"><b>View</b></button></a>
                                </td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
               <!-- start pagination -->
                <ul class="pagination pagination-rounded justify-content-end mb-2">
                    <% if(page > 1){ %>
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="pagination('<%=(Number(page)-1)%>')" aria-label="Previous">
                                <i class="mdi mdi-chevron-left"></i>
                            </a>
                        </li>
                    <% } %>
                    <% for (i = 1; i <= totalPage; i++) { %>
                        <li class="page-item  <% if(page == i){ %> active <% } %>"><a class="page-link"  href="#" onclick="pagination('<%=i%>')"><%=i%></a></li>
                    <% } %>
                    <% if(page < totalPage){ %>
                    <li class="page-item">
                        <a class="page-link"  href="#" onclick="pagination('<%=(Number(page)+1)%>')" aria-label="Next">
                            <i class="mdi mdi-chevron-right"></i>
                        </a>
                    </li>
                    <% } %>
                </ul>
                <!-- end pagination -->
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
<script>
    function pagination(i){
        $("#page").val(i);
        $("#form").submit();
    }
</script>
<script>
// Any change event occuring on any input.staus (checkbox)...
$('.status').on('change', function(e) {
    // A boolean that reflects the checkbox "check status"
    let checked = $(this).is(':checked');
    // A simple confirm...
    let changed = confirm("Are you sure you want to change this status?");
    //... if user cancels...
    if (!changed) {
        /* ...ternary: [?][if checkbox is checked] - [uncheck it] [:][otherwise] - [check it]
        [return][Terminate function - don't do anything else] */
        return checked ? $(this).prop('checked', false) : $(this).prop('checked', true);
    }else{
        $.post("change-sop-status", {
            _id: $(this).val()
            }, function(data, status){
            toastr.success(data.message);
        });
    }
});
</script>
<% if(error.length> 0) { %>
    <script>
        toastr.error('<%= error %>');
    </script>
<% } %>
<% if(message.length> 0) { %>
    <script>
        toastr.success('<%= message %>');
    </script>
<% } %>
<%- contentFor('BottomJs') %>