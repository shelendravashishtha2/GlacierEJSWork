<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<style>
    .text-center{text-align: center;}
</style>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">View Rating</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="<%= process.env.APP_URL %>/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="<%= process.env.APP_URL %>/manage-rating">Manage Rating</a></li>
                    <li class="breadcrumb-item active">View Rating</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->

<%- contentFor('body') %>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
				<div class="row mb-2">
                    <div class="col-sm-8">
                        <div class="mb-2 row">
                            <label for="example-text-input" class="col-md-4 col-form-label text-sm-end">Select Property Name :-</label>
                            <div class="col-md-5">
                                <select class="form-select" onchange="changeGroupId(this)" name="groupId" id="groupId" >
                                    <option value="">Select Group Name</option>
                                    <% for (i = 0; i < assignPropertyGroupData.length; i++) { %>
                                        <option value="<%= assignPropertyGroupData[i]._id %>" <%= data.groupId == String(assignPropertyGroupData[i]._id) ? 'selected' : '' %>><%= assignPropertyGroupData[i].groupName %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap table-check">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Topic name</th>
                                <th class="text-center">Weightage</th>
                                <th class="text-center">Total Point</th>
                                <th class="text-center">Auditor Name</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
							<% for( let i = 0; i < MngRatingTaskAssignTopicList.docs.length; i++ ) { %>
								<tr>
									<td class="text-center" style="width: 7%;"><%= i+1 %></td>
									<td class="text-center"><%= MngRatingTaskAssignTopicList.docs[i].topicId.topicName %></td>
									<td class="text-center">
										<% let totalWeightage = 0; %>
										<% for( let j = 0; j < MngRatingTaskAssignTopicList.docs[i].assignChecklists.length; j++ ) { %>
											<% totalWeightage = totalWeightage + MngRatingTaskAssignTopicList.docs[i].assignChecklists[j].checklistId.weightage %>
										<% } %>
										<%= totalWeightage %>
									</td>
									<td class="text-center">
										<% let totalPoint = 0; %>
										<% for( let j = 0; j < MngRatingTaskAssignTopicList.docs[i].assignChecklists.length; j++ ) { %>
											<% totalPoint = totalPoint + MngRatingTaskAssignTopicList.docs[i].assignChecklists[j].point %>
										<% } %>
										<%= totalPoint %>
									</td>
									<td class="text-center"><%= propertyAuditorDetails.full_name %> </td>
									<td class="text-center" style="width: 7%;">
										<a href="<%= process.env.APP_URL %>/view-assign-task-checklist?propertyId=<%= data.propertyId %>&&groupId=<%= data.groupId %>&&topicId=<%= MngRatingTaskAssignTopicList.docs[i].topicId._id %>" class="btn btn-outline-secondary"><b>View</b></a>
									</td>
								</tr>
							<% } %>
                        </tbody>
                    </table>
                </div>
				<!-- start pagination -->
				<div class="row">
					<div class="col-6">
						<p>Showing <%#= MngRatingTaskAssignTopicList.pagingCounter %> to <%#= MngRatingTaskAssignTopicList.pagingCounter + (MngRatingTaskAssignTopicList.limit-1) %> of <%#= MngRatingTaskAssignTopicList.totalDocs %> entries</p>
					</div>
					<div class="col-6">
						<ul class="pagination pagination-rounded justify-content-end mb-2">
							<li class="page-item <%#= MngRatingTaskAssignTopicList.hasPrevPage ? '' : 'disabled' %>">
								<a class="page-link" href="javascript: void(0);" onclick="pagination(<%#= MngRatingTaskAssignTopicList.prevPage %>)" aria-label="Previous">
									<i class="mdi mdi-chevron-left"></i>
								</a>
							</li>
							<% for( let i = 0; i < MngRatingTaskAssignTopicList.totalPages; i++ ) { %>
								<li class="page-item <%#= MngRatingTaskAssignTopicList.page == i+1 ? 'active' : '' %>">
									<a class="page-link" href="javascript: void(0);" onclick="pagination(<%#= i+1 %>)"><%#= i+1 %></a>
								</li>
							<% } %>
							<li class="page-item <%#= MngRatingTaskAssignTopicList.hasNextPage ? '' : 'disabled' %>">
								<a class="page-link" href="javascript: void(0);" onclick="pagination(<%#= MngRatingTaskAssignTopicList.prevPage %>)" aria-label="Next">
									<i class="mdi mdi-chevron-right"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
                <!-- end pagination -->
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
