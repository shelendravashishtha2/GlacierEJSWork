<%- contentFor('HeaderCss') %>
<%- contentFor('breadcrumb') %>
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0 font-size-18">Property Details</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="<%=APP_URL%>/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="<%=APP_URL%>/propertys">Property</a></li>
                    <li class="breadcrumb-item active">Property Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!-- end page title -->
<%- contentFor('body') %>
<div class="row">
    <div class="col-xl-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-3"><i class="fa fa-th-large"></i> Property Photes:</h4>
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <ol class="carousel-indicators">
                        <% for (j = 0; j < data[0].property_images.length; j++) { %>
                        <% if(j == 0) { %>
                        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%=j%>" class="active"></li>
                        <% } else {%>
                        <li data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%=j%>"></li>
                        <% } }%>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <% for (j = 0; j < data[0].property_images.length; j++) { %>
                        <% if(j == 0) { %>
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="<%=process.env.APP_URL+data[0].property_images[j]%>" alt="Property first image" style="height: 300px;
                            width: 100%;">
                        </div>
                        <% } else {%>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="<%=process.env.APP_URL+data[0].property_images[j]%>" alt="Property second image" style="height: 300px;
                            width: 100%;">
                        </div>
                        <% } }%>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-2"><i class="fa fa-th-large"></i> Property Details :<a href="<%=APP_URL%>/propertys"><i class="fa fa-chevron-circle-left" style="float: right;font-size: 20px;"></i> <a href="<%=APP_URL%>/propertys"></a></h4>
                <div class="table-responsive">
                    <table class="table table-nowrap table-hover mb-0">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">Property Name</th>
                                <td>: <%=data[0].property_name%></td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 20%;">Wing</th>
                                <td>: <% for (j = 0; j < data[0].wings.length; j++) { %> <span><%=data[0].wings[j]%>, </span><% } %></td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 20%;">Address</th>
                                <td>: <%=data[0].address%></td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 20%;">Name of Owner</th>
                                <td>: <%=data[0].name_of_owner%></td>
                            </tr>
                            <tr>
                                <th scope="row" style="width: 20%;">Area Name</th>
                                <td>: <%=data[0].area_name%></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end row -->
<%- contentFor('FooterJs') %>
<!-- apexcharts -->
<script src="<%=process.env.APP_URL%>/public/assets/libs/apexcharts/apexcharts.min.js"></script>
<script src="<%=process.env.APP_URL%>/public/assets/js/pages/profile.init.js"></script>
<%- contentFor('BottomJs') %>